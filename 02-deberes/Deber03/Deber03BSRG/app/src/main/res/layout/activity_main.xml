<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ly_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    tools:context=".vista.MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="411dp"
        android:layout_height="83dp"
        android:background="#000000"
        android:paddingTop="60px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="301dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/logon" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="61dp"
            android:layout_height="29dp"
            android:layout_gravity="center|end"
            app:srcCompat="@drawable/a" />

    </FrameLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="416dp"
        android:layout_height="260dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        app:srcCompat="@drawable/imagenserie" />

    <Button
        android:id="@+id/btn_irSerie"
        android:layout_width="413dp"
        android:layout_height="49dp"
        android:backgroundTint="#000000"
        android:text="Ver ahora"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_peliculas"
        android:layout_width="400dp"
        android:layout_height="264dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_irSerie" />

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="409dp"
        android:layout_height="73dp"
        android:background="#000000"
        android:backgroundTint="#000000"
        android:padding="25px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="41dp"
            android:layout_height="40dp"
            android:layout_gravity="start|center_horizontal|center_vertical"
            android:layout_marginLeft="30px"
            app:srcCompat="@drawable/z" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="39dp"
            android:layout_height="41dp"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:backgroundTint="#717070"
            app:srcCompat="@drawable/x" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="44dp"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal|center_vertical|end"
            android:layout_marginRight="30px"
            android:backgroundTint="#717070"
            app:srcCompat="@drawable/y" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>